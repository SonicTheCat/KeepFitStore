@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-6 col-xl-4 offset-md-3 offset-xl-4">
        <section>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex justify-content-center mt-4 form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-facebook-square"></i> Login via @provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>

            <form id="account" method="post">
                <div class="shadow mt-2 p-2">
                    <h4 class="m-2">Member Login</h4>
                     <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group m-2">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group ml-2 mt-2">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group m-2 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <hr class="w-50" />
                </div>
                <div class="form-group">
                    <ul class="m-1">
                        <li class="m-2">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </li>
                        <li class="m-2">
                            Not a member yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up now!</a>
                        </li>
                    </ul>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
