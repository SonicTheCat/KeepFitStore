@using KeepFitStore.Models.ViewModels.Products.Vitamins

@model DetailsVitaminViewModel
@{
    ViewData["Title"] = $"{Model.Name} Details";
    this.ViewBag.Product = Model;
}

<partial name="~/Areas/Products/Views/Partials/_ReviewForProductPartial.cshtml" />
<partial name="~/Areas/Products/Views/Partials/_ProductShortDetailsPartial.cshtml" />

<div class="container mt-4 mb-4 p-4">
    <div class="row">
        <div class="col-xs-12 col-xl-12">
            <nav>
                <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                    <partial name="~/Areas/Products/Views/Partials/_TabsForDetailsInfoPartial.cshtml" />
                </div>
            </nav>
            <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-nutrition" role="tabpanel" aria-labelledby="nav-home-tab">
                </div>
                <div class="tab-pane fade" id="nav-directions" role="tabpanel" aria-labelledby="nav-profile-tab">
                    @Model.Directions
                </div>
                <div class="tab-pane fade" id="nav-description" role="tabpanel" aria-labelledby="nav-contact-tab">
                    @Model.Description
                </div>
                <div class="tab-pane fade" id="nav-reviews" role="tabpanel" aria-labelledby="nav-about-tab">
                    <partial name="~/Areas/Products/Views/Partials/_ListAllReviewsForProductPartial.cshtml" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $().ready(function () {
        submitReviewForm();
        goToReviewsForCurrentPrdocut();
    });
</script>
}