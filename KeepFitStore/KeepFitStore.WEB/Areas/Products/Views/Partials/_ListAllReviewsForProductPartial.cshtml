@if (this.ViewBag.Product.Reviews.Count == 0)
{
    <h3 class="text-center text-secondary">There are no reviews for this product yet.</h3>
}
else
{
    var counter = 0;
    foreach (var item in this.ViewBag.Product.Reviews)
    {
        <div class="row">
            <div class="col-1 display-4">@(++counter)</div>
            <div class="col-8">
                @for (int i = 0; i < item.GivenRating; i++)
                {
                    <span class="fa fa-star checked"></span>
                }

                <h5 class="mb-0">@item.Title</h5>
                <footer class="blockquote-footer">Username</footer>
                <p class="mt-3" style="display:inline-block"><em><span class="contentSpan">@item.Content</span></em></p>

            </div>
        </div>
        <hr />
    }
}