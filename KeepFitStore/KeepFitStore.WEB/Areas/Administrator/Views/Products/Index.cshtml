@using KeepFitStore.Models.ViewModels.Products

@model IEnumerable<ProductViewModel>
@{
    this.ViewData["Title"] = "Administration - All Products";
    var plural = "s";
    var productName = string.Empty;
}

<h3 class="m-4"><em>Manage All Products</em></h3>
<ul class="list-group">
    @foreach (var item in Model)
    {
        productName = item.Name.ToUpper() + " " + item.ProductType.ToString().ToUpper();
        productName = productName.Length > 16 ? productName.Substring(0, 16) : productName;

        <li class="list-group-item mt-4 shadow flex-lg-row flex-md-row flex-sm-row flex-column d-flex justify-content-between align-items-center">
            <img src="@item.ImageUrl" width="75" height="75" alt="@item.Name" class="img-thumbnail">
            <div class="card-title"><strong>@productName</strong></div>
            <a asp-area="Products" asp-controller="@(item.ProductType.ToString() + @plural)" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><span class="glyphicon glyphicon-arrow-right"></span>Edit</a>
            <a asp-area="Products" asp-controller="@(item.ProductType.ToString() + @plural)" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><span class="glyphicon glyphicon-arrow-right"></span>Details</a>
            <a href="#" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-arrow-right"></span>Delete</a>
            <span class="badge badge-primary badge-pill">&pound;@item.Price</span>
        </li>
    }
</ul>

