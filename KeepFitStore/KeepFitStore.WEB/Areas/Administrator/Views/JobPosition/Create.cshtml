@using KeepFitStore.Models.InputModels.JobPositions

@model CreateJobPositionInputModel
@{
    ViewData["Title"] = "Create Job Position";
}

<div class="col-md-6 col-xl-4 offset-md-3 offset-xl-4 mt-4 mb-4">
    <form asp-area="Administrator" asp-controller="JobPosition" asp-action="Crete" method="post">
        <div class="shadow mt-2 p-2">
            <h4 class="m-2">Create Job Position Form</h4>
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group m-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" type="number" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group m-2 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Create Position</button>
            </div>
            <hr class="w-50" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}