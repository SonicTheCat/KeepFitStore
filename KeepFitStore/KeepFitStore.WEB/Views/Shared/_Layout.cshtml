@using Microsoft.AspNetCore.Identity
@using KeepFitStore.Domain

@inject SignInManager<KeepFitUser> SignInManager
@inject UserManager<KeepFitUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KeepFitStore.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <partial name="~/Views/Partials/_NavbarPartial.cshtml" />
        <partial name="~/Views/Partials/_MenuNavbar.cshtml" />
        <partial name="~/Views/Partials/_CookieConsentPartial.cshtml" />
        <div class="container">
            @RenderBody()
        </div>
        <partial name="~/Views/Partials/_FooterPartial.cshtml" />
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"  type="text/javascript"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/orders.js" asp-append-version="true"></script>
    <script src="~/js/reviews.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
